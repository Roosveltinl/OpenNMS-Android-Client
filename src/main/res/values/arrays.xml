<resources>

    <!--
        It is important to preserve order of items in all arrays!
        Changes may break some parts of application.
     -->

    <string-array name="severity">
        <item>@string/alarm_severity_critical</item>
        <item>@string/alarm_severity_major</item>
        <item>@string/alarm_severity_minor</item>
        <item>@string/alarm_severity_warning</item>
        <item>@string/alarm_severity_indeterminate</item>
        <item>@string/alarm_severity_normal</item>
        <item>@string/alarm_severity_cleared</item>
    </string-array>
    <array name="severity_values">
        <item>CRITICAL</item>
        <item>MAJOR</item>
        <item>MINOR</item>
        <item>WARNING</item>
        <item>INDETERMINATE</item>
        <item>NORMAL</item>
        <item>CLEARED</item>
    </array>

    <string-array name="alarms_action_list">
        <item>@string/outstanding_alarms</item>
        <item>@string/acked_alarms</item>
    </string-array>

    <string-array name="outages_action_list">
        <item>@string/outages_current</item>
        <item>@string/outages_resolved</item>
        <item>@string/outages_all</item>
    </string-array>

</resources>
